#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1
export DH_OPTIONS=-v
INSTALLROOT=$(CURDIR)/debian/tmp
DEBROOT=$(CURDIR)/debian/tmp

%:
	dh $@ --with python2  --with quilt
override_dh_auto_install:
	mkdir -p $(INSTALLROOT)/usr/lib/rave_mapviewer
	mkdir -p $(INSTALLROOT)/usr/lib/python2.7/site-packages/
	python setup.py install --prefix=/usr/lib --root=$(INSTALLROOT)
	mv $(INSTALLROOT)/usr/lib/lib/python2.7/site-packages/*.py $(INSTALLROOT)/usr/lib/rave_mapviewer/Lib/
	echo "/usr/lib/rave_mapviewer/Lib" > $(INSTALLROOT)/usr/lib/python2.7/site-packages/rave_mapviewer.pth
	dh_quilt_unpatch

#override_dh_auto_build:
