#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1
export DH_OPTIONS=-v
JAVA_HOME=/usr/lib/jvm/default-java
#INSTALLROOT=/usr/src/packages/BUILD/debian/tmp
INSTALLROOT=$(CURDIR)/debian/tmp
DEBROOT=$(CURDIR)/debian/tmp

%:
	dh $@
override_dh_auto_clean:

override_dh_installdirs:
	mkdir -p $(DEBROOT)/var/lib/tomcat7/webapps/BaltradDex
	mkdir -p $(DEBROOT)/var/lib/baltrad/bdb_storage
	mkdir -p $(DEBROOT)/etc/baltrad/bltnode-keys
#	ls -lR

override_dh_auto_build:
	ant -Dbeast.path=/opt/baltrad/baltrad-beast -Dbaltrad.db.path="/opt/baltrad" -Djavahdf.path=/usr/share/java

override_dh_auto_install:
	ant install -Dapp.dist.dir.name=baltrad-dex -Dbeast.path=/opt/baltrad/baltrad-beast -Dbaltrad.db.path="/opt/baltrad" -Djavahdf.path=/usr/share/java -Dinstall.prefix=$(INSTALLROOT)/opt/baltrad
	cd $(DEBROOT)/var/lib/tomcat7/webapps/BaltradDex && jar -xvf $(INSTALLROOT)/opt/baltrad/baltrad-dex/bin/BaltradDex.war
	echo '<?xml version="1.0" encoding="UTF-8"?>' > $(INSTALLROOT)/var/lib/tomcat7/webapps/BaltradDex/META-INF/context.xml
	echo '<Context allowLinking="true" path="/BaltradDex" />' >> $(INSTALLROOT)/var/lib/tomcat7/webapps/BaltradDex/META-INF/context.xml

override_dh_install:
	dh_install --sourcedir=$(INSTALLROOT)
	dh_link

