#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1
export DH_OPTIONS=-v
BUILDROOT=/usr/src/packages/BUILD/debian/tmp
%:
	dh $@ --with python2
override_dh_auto_configure:
	./configure --with-rave=/opt/baltrad/rave --with-lapack=/usr/lib/lapack --with-cblas=/usr/lib/atlas-base/atlas --with-blas=/usr/lib/libblas
override_dh_auto_build:
	make
override_dh_auto_install:
	mkdir -p $(BUILDROOT)/etc/ld.so.conf.d/baltrad/
	make install
	echo "/opt/baltrad/baltrad-wrwp/lib/">> $(BUILDROOT)/etc/ld.so.conf.d/baltrad-wrp.conf
override_dh_auto_clean:
	
override_dh_auto_test:
	
override_dh_shlibdeps:
	dh_shlibdeps -l $(BUILDROOT)/opt/baltrad/baltrad-wrwp/lib:/opt/baltrad/hlhdf/default/lib